<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="0.7dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:text="Mes rendez-vous"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <!-- Photo Médecin -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgDoctor"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            android:contentDescription="Photo Médecin"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:strokeColor="#BDBDBD"
            app:strokeWidth="1dp" />

        <!-- Bloc Infos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Nom médecin -->
            <TextView
                android:id="@+id/txtDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                tools:text="Dr. Sarah Ahmed"/>

            <!-- Spécialité -->
            <TextView
                android:id="@+id/txtSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:textColor="#616161"
                tools:text="Cardiologie"/>

            <!-- Date + Heure -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:tint="#2196F3"
                    android:src="@drawable/ic_calendar"/>

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    tools:text="12 Jan 2025 - 14:30"/>
            </LinearLayout>

            <!-- Statut -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/statusCircle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:backgroundTint="#4CAF50"
                    android:background="@drawable/status_circle"/>

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Confirmé"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    tools:text="En attente"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Bouton options -->
        <ImageButton
            android:id="@+id/btnOptions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:tint="#757575"/>


    </LinearLayout>

        <Button
            android:id="@+id/btnAddRdv"
            android:text="Prendre un rendez-vous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>